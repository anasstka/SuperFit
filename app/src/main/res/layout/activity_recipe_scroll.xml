<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRecipeScroll">

    <ImageView
        android:id="@+id/im_recipe"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/top_man" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="144dp"
        app:srcCompat="@drawable/white_block_on_main" />

    <TextView
        android:id="@+id/tv_name_on_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Chicken Vesuvio"
        android:textColor="#000"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/ing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="272dp"
        android:layout_marginBottom="17dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_bold"
        android:text="Ingredients:"
        android:textColor="#000"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/btn_back_on_scroll"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:tint="#fff"
        app:srcCompat="@drawable/abc_vector_test" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="213dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_kcal_on_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_regular"
            android:text="7177"
            android:textColor="#666666"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_regular"
            android:text=" kcal"
            android:textColor="#666666"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="241dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_protein_on_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:fontFamily="@font/montserrat_regular"
            android:text="290"
            android:textColor="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="g protein • "
            android:textColor="#666666"
            android:fontFamily="@font/montserrat_regular"/>

        <TextView
            android:id="@+id/tv_fat_on_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="325 "
            android:fontFamily="@font/montserrat_regular"
            android:textColor="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="g fat • "
            android:fontFamily="@font/montserrat_regular"
            android:textColor="#666666" />
        <TextView
            android:id="@+id/tv_carbs_on_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="746 "
            android:fontFamily="@font/montserrat_regular"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="g carbs"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="#666666" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_ingredients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ing"
        android:divider="@null" />

</RelativeLayout>